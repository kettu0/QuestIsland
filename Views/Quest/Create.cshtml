@model QuestStore_C_of_thieves.Models.Quest
@{
    ViewData["Title"] = "Create new quest";
    var _activeUser = ViewData["activeUser"] as User;
}

@if (_activeUser.UserRole == "A" || _activeUser.UserRole == "M")
{
    @section searchbar{
        <form method="get" asp-controller="Quest" asp-action="Search">
            <div class="searchbox">
                <input type="text" placeholder="&#x1F50E Search the Seven Seas!" id="search" name="keyword">
            </div>
        </form>
    }
<div class="form-container">
    <section class="section-box">
        <div class="text-box-area">
            <form method="post" onsubmit="return sendForm()">
                <br /><br />
                <p id="box-title">Create new quest</p><br />
                <input class="flat-box" type="text" placeholder="Quest name" id="quest" asp-for="Name">
                <img src="~/img/quest.png" class="little-icon" title="Quest name">
                <center>
                    <p id="errorName"></p>
                </center>

                <textarea class="box-box" placeholder="Quest description" id="description" asp-for="Description"></textarea>
                <img src="~/img/feather.png" class="description-icon" title="Description">
                <center><p id="errorDescription"></p></center>

                <input class="flat-box" type="text" placeholder="Price" id="price" asp-for="CoolpointsValue">
                <img src="~/img/coolcoin.png" class="little-icon" title="Price">

                <input class="flat-box" type="text" placeholder="Experience" id="exp" asp-for="ExpValue">
                <img src="~/img/pirateship.png" class="little-icon" title="Experience">
                <center>
                    <p id="errorValue"></p>
                </center>
                <input type="radio" id="basictype" name="type" value="basic" asp-for="Type"><label for="Basic">Basic</label>
                <input type="radio" id="extratype" name="type" value="extra" asp-for="Type"><label for="Extra">Extra</label>
                <center>
                    <p id="errorRadio"></p><br />
                </center>
                <center><button class="box-button" type="submit" id="button" name="sendButton" asp-controller="Quest" asp-action="Create">SUBMIT!</button></center>
                <br /><br />

            </form>
        </div>
    </section>
    <script src="~/js/createQuestArtifact.js"></script>
</div>

 
        }

        else
        {
        <h1 class="display-4">Arrrrrrr!</h1>
        <p>There's nothing for you to see there!</p>
        <img src="~/img/skull.png" id="wrongplace" />
        }
